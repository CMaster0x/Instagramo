<h1>Notificaciones</h1>

<% @notifications.each do |notification| %>
  <% if notification.action == 'follow' %>
    <p>
      <%= link_to(notification.sender.email, user_path(notification.sender.id)) %> started following you 
    </p>
  <% elsif notification.action == 'like' %>
    <p>
    <%= link_to(notification.sender.email, user_path(notification.sender.id)) %> liked your <%= link_to('post', post_path(notification.recipient.id)) %> 
    </p>
  <% else %>
    <p>
      <%= notification.action %>
    </p>
  <% end %>
<% end %>
